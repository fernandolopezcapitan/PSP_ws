<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <EditText
        android:hint="Escriba url de busqueda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_url"
        android:layout_margin="2dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cargar web"
        android:id="@+id/btn_cargarWeb"
        android:layout_below="@+id/et_url"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webViewVista"
        android:layout_below="@+id/btn_cargarWeb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn_cargarWeb"
        android:layout_alignEnd="@+id/btn_cargarWeb" />
</RelativeLayout>
